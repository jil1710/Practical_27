@model Core_Practical_17.Models.Student

@{
    ViewData["Title"] = "Delete";
}

<div class="container d-flex justify-content-center mt-5">
    <div class="row">
        <div class="col-12 col-sm-12 col-md-12 col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title text-center mb-3">You want to delete?</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Name) :
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Email) :
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Email)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.DOB) :
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.DOB)
                        </dd>
                        <dt class="col-sm-4">
                            @Html.DisplayNameFor(model => model.Age) :
                        </dt>
                        <dd class="col-sm-6">
                            @Html.DisplayFor(model => model.Age)
                        </dd>
                    </dl>
                </div>
                <div class="card-footer text-muted bg-transparent border-top-0">
                    <form class="d-flex justify-content-between" asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="views">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                        </div>
                        <div class="stats">
                            <a class="btn btn-success" asp-action="Index">Back to List</a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

